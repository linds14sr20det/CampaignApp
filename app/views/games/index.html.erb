<% provide(:title, 'Recent Games') %>
<div class="container">
  <div class="row">
    <div class="col-lg-12"><h1>Recent Games</h1></div>
  </div>
  <div class="row row-bordered">
    <div class="col-lg-2"><%= link_to "Report results here!", new_game_path, class: "btn btn-lg btn-primary sg-games-create"%></div>
    <div class="col-lg-8"><%= will_paginate :class => 'pagination-centered' %></div>
    <div class="col-lg-2"></div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <ul class="users">
        <%= render @games %>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8"><%= will_paginate :class => 'pagination-centered' %></div>
    <div class="col-lg-2"></div>
  </div>
</div>
